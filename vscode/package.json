{
	"name": "flux-lsp",
	"description": "A language server example",
	"author": "Microsoft Corporation",
	"version": "1.0.1",
	"publisher": "ibrahimfadel",
	"repository": {
		"type": "git",
    "url": "https://github.com/IbrahimFadel/flux.git"
	},
	"license" : "GPT-3",
	"categories": [],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:flux"
	],
	"main": "./client/out/main",
	"contributes": {
		"languages": [
			{
				"id": "flux",
				"extensions": [
					".flx"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./icons/flux-light.png",
					"dark": "./icons/flux-dark.png"
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"fluxLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"fluxLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify && npm run prepare-binary",
		"esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=client/out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"prepare-binary": "cd .. && cargo build --package flux-lsp && cp target/debug/flux-lsp vscode/",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../ && cargo build"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"esbuild": "^0.14.43",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"typescript": "^4.7.2"
	}
}
